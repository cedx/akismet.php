{
	"abandoned": true,
	"description": "Prevent comment spam using the Akismet service. Add Akismet to your applications so you don't have to worry about spam again.",
	"homepage": "https://github.com/cedx/akismet.php",
	"license": "MIT",
	"name": "cedx/akismet",
	"type": "library",
	"version": "13.0.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"Akismet\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"Akismet\\": "test/"}
	},
	"config": {
		"optimize-autoloader": true,
		"platform-check": false
	},
	"funding": [
		{"type": "github", "url": "https://github.com/sponsors/cedx"}
	],
	"keywords": [
		"akismet",
		"comment",
		"spam",
		"validation"
	],
	"require": {
		"php": ">=7.4.0",
		"ext-date": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"nyholm/psr7": "^1.4.1",
		"psr/http-client": "^1.0.1",
		"psr/log": "^1.1.4",
		"symfony/event-dispatcher": "^5.3.7",
		"symfony/http-client": "^5.3.10"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5.10"
	},
	"scripts": {
		"build": "pwsh tool/build.ps1",
		"clean": "pwsh tool/clean.ps1",
		"doc": ["@version", "pwsh tool/doc.ps1"],
		"publish": ["@clean", "@version", "@build", "pwsh tool/publish.ps1"],
		"test": "phpunit --configuration=etc/phpunit.xml",
		"version": "pwsh tool/version.ps1",
		"watch": "pwsh tool/watch.ps1"
	},
	"support": {
		"docs": "https://github.com/cedx/akismet.php/wiki",
		"issues": "https://github.com/cedx/akismet.php/issues"
	}
}
