{
	"description": "Prevent comment spam using the Akismet service.",
	"homepage": "https://github.com/cedx/akismet.php",
	"license": "MIT",
	"name": "cedx/akismet",
	"type": "library",
	"version": "16.0.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"akismet\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"akismet\\": "test/"}
	},
	"config": {
		"platform-check": false
	},
	"keywords": [
		"akismet",
		"api",
		"client",
		"comment",
		"spam",
		"validation"
	],
	"require": {
		"php": ">=8.4.0",
		"ext-curl": "*",
		"ext-date": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"nyholm/psr7": "^1.8.2"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1.7",
		"phpunit/phpunit": "^12.0.7"
	},
	"scripts": {
		"test": "phpunit --configuration=etc/phpunit.xml"
	},
	"support": {
		"docs": "https://github.com/cedx/akismet.php/wiki",
		"issues": "https://github.com/cedx/akismet.php/issues"
	}
}
