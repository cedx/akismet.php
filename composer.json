{
  "description": "Prevent comment spam using the Akismet service. Add Akismet to your applications so you don't have to worry about spam again.",
  "homepage": "https://dev.belin.io/akismet.php",
  "license": "MIT",
  "name": "cedx/akismet",
  "type": "library",
  "authors": [
    {"email": "cedric@belin.io", "name": "CÃ©dric Belin", "homepage": "https://belin.io"}
  ],
  "autoload": {
    "psr-4": {"Akismet\\": "lib/"}
  },
  "autoload-dev": {
    "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"],
    "psr-4": {"Akismet\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "guzzlehttp/guzzle": "^6.3.3",
    "league/event": "^2.2.0"
  },
  "require-dev": {
    "cedx/coveralls": "^10.1.0",
    "consolidation/robo": "^1.4.9",
    "henrikbjorn/lurker": "^1.2.0",
    "phpstan/phpstan": "^0.11.8",
    "phpunit/phpunit": "^8.2.1"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/akismet.php/api",
    "issues": "https://github.com/cedx/akismet.php/issues"
  }
}
