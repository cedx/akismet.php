{
	"description": "Prevent comment spam using the Akismet service.",
	"homepage": "https://github.com/cedx/akismet.php",
	"license": "MIT",
	"name": "cedx/akismet",
	"type": "library",
	"version": "15.1.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"akismet\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"akismet\\": "test/"}
	},
	"config": {
		"platform-check": false
	},
	"keywords": [
		"akismet",
		"api",
		"client",
		"comment",
		"spam",
		"validation"
	],
	"require": {
		"php": ">=8.3.0",
		"ext-curl": "*",
		"ext-date": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"nyholm/psr7": "^1.8.1",
		"psr/http-client": "^1.0.3",
		"symfony/http-client": "^7.0.5"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10.64",
		"phpunit/phpunit": "^11.0.7"
	},
	"scripts": {
		"build": "@php tool/build.php",
		"clean": "@php tool/clean.php",
		"dist": ["@clean", "@build"],
		"doc": "@php tool/doc.php",
		"lint": "phpstan analyse --configuration=etc/phpstan.php --memory-limit=256M",
		"publish": "@php tool/publish.php",
		"test": "phpunit --configuration=etc/phpunit.xml"
	},
	"support": {
		"docs": "https://docs.belin.io/akismet.php",
		"issues": "https://github.com/cedx/akismet.php/issues"
	}
}
