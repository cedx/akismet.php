{
  "description": "Prevent comment spam using Akismet service.",
  "homepage": "https://github.com/cedx/akismet.php",
  "name": "cedx/akismet",

  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"akismet\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "evenement/evenement": "^2.0.0",
    "guzzlehttp/guzzle": "^6.2.3"
  },
  "require-dev": {
    "cedx/coveralls": "^0.4.0",
    "cedx/phpunit-expect": "^0.1.0",
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0"
  },
  "scripts": {
    "coverage": "coveralls --file=var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/akismet.php/issues"
  }
}
