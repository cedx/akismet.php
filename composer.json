{
  "description": "Prevent comment spam using the Akismet service. Add Akismet to your applications so you don't have to worry about spam again.",
  "homepage": "https://dev.belin.io/akismet.php",
  "license": "MIT",
  "name": "cedx/akismet",
  "type": "library",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin",
    "homepage": "https://belin.io",
    "role": "Developer"
  }],
  "autoload": {
    "psr-4": {"Akismet\\": "lib/"}
  },
  "autoload-dev": {
    "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"],
    "psr-4": {"Akismet\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "evenement/evenement": "^3.0.1",
    "guzzlehttp/guzzle": "^6.3.3"
  },
  "require-dev": {
    "cedx/coveralls": "^9.1.2",
    "consolidation/robo": "^1.4.5",
    "henrikbjorn/lurker": "^1.2.0",
    "phpstan/phpstan": "^0.11.3",
    "phpunit/phpunit": "^8.0.4"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/akismet.php/api",
    "issues": "https://github.com/cedx/akismet.php/issues"
  }
}
