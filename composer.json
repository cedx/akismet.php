{
	"description": "Prevent comment spam using the Akismet service.",
	"homepage": "https://github.com/cedx/akismet.php",
	"license": "MIT",
	"name": "cedx/akismet",
	"type": "library",
	"version": "14.0.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"Akismet\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"Akismet\\": "test/"}
	},
	"config": {
		"optimize-autoloader": true,
		"platform-check": false
	},
	"funding": [
		{"type": "github", "url": "https://github.com/sponsors/cedx"}
	],
	"keywords": [
		"akismet",
		"api",
		"client",
		"comment",
		"spam",
		"validation"
	],
	"require": {
		"php": ">=8.1.0",
		"ext-date": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"nyholm/psr7": "^1.5.1",
		"psr/http-client": "^1.0.1",
		"symfony/http-client": "^6.1.2"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.8.1",
		"phpunit/phpunit": "^9.5.21"
	},
	"scripts": {
		"test": "phpunit --configuration=etc/phpunit.xml"
	},
	"support": {
		"docs": "https://github.com/cedx/akismet.php/wiki",
		"issues": "https://github.com/cedx/akismet.php/issues"
	}
}
