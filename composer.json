{
  "description": "Prevent comment spam using the Akismet service. Add Akismet to your applications so you don't have to worry about spam again.",
  "homepage": "https://dev.belin.io/akismet.php",
  "license": "MIT",
  "name": "cedx/akismet",
  "type": "library",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"Akismet\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "evenement/evenement": "^3.0.1",
    "guzzlehttp/guzzle": "^6.3.3"
  },
  "require-dev": {
    "cedx/coveralls": "^7.1.0",
    "cedx/phpunit-expect": "^0.5.0",
    "phing/phing": "^2.16.1"
  },
  "scripts": {
    "coverage": "coveralls var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "docs": "https://dev.belin.io/akismet.php/api",
    "issues": "https://github.com/cedx/akismet.php/issues"
  }
}
