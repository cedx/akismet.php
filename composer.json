{
  "description": "Prevent comment spam using the Akismet service. Add Akismet to your applications so you don't have to worry about spam again.",
  "homepage": "https://dev.belin.io/akismet.php",
  "license": "MIT",
  "name": "cedx/akismet",
  "type": "library",
  "authors": [
    {"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
  ],
  "autoload": {
    "psr-4": {"Akismet\\": "lib/"}
  },
  "autoload-dev": {
    "psr-4": {"Akismet\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "funding": [
    {"type": "patreon", "url": "https://www.patreon.com/cedx"}
  ],
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "nyholm/psr7": "^1.2.1",
    "psr/http-client": "^1.0.0",
    "symfony/event-dispatcher": "^4.4.6 || ^5.0.5",
    "symfony/http-client": "^5.0.5"
  },
  "require-dev": {
    "cedx/coveralls": "^12.0.0",
    "consolidation/robo": "^2.0.3",
    "phpstan/phpstan": "^0.12.18",
    "phpunit/phpunit": "^9.0.1"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/akismet.php/api",
    "issues": "https://github.com/cedx/akismet.php/issues"
  }
}
