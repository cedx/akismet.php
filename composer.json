{
  "description": "Prevent comment spam using the Akismet service. Add Akismet to your applications so you don't have to worry about spam again.",
  "homepage": "https://dev.belin.io/akismet.php",
  "license": "MIT",
  "name": "cedx/akismet",
  "type": "library",
  "authors": [
    {"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
  ],
  "autoload": {
    "psr-4": {"Akismet\\": "lib/"}
  },
  "autoload-dev": {
    "psr-4": {"Akismet\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "akismet",
    "comment",
    "spam",
    "validation"
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "guzzlehttp/guzzle": "^6.5.2",
    "league/event": "^2.2.0"
  },
  "require-dev": {
    "cedx/coveralls": "^12.0.0",
    "cedx/phpunit-expect": "^0.10.0",
    "consolidation/robo": "^2.0.3",
    "phpstan/phpstan": "^0.12.14"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/akismet.php/api",
    "issues": "https://github.com/cedx/akismet.php/issues"
  }
}
